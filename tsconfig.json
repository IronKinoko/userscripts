{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "shared": ["./packages/shared/src/index.ts"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
